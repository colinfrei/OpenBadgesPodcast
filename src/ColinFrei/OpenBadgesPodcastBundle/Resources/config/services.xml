<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jms_serializer.xml_serialization_visitor.class">ColinFrei\OpenBadgesPodcastBundle\RssSerializationVisitor</parameter>
    </parameters>

    <services>
        <service id="colin_frei_openbadges_podcast.command.spider" class="ColinFrei\OpenBadgesPodcastBundle\Command\SpiderCommand">
            <argument type="service" id="buzz" />
            <argument type="service" id="serializer" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="logger" />

            <tag name="console.command" />
        </service>
    </services>
</container>
